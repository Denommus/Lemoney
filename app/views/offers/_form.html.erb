<%= form_with(model: offer, local: true) do |form| %>
  <% if offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :advertiser_name %>
    <%= form.text_field :advertiser_name, id: :offer_advertiser_name %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :offer_url %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :offer_description %>
  </div>

  <div class="field">
      <%= form.label :starts_at %>
      <%= form.text_field :starts_at, id: :offer_starts_at, value: @offer.try(:starts_at).try(:to_s) %>
  </div>

  <div class="field">
      <%= form.label :ends_at %>
      <%= form.text_field :ends_at, id: :offer_ends_at, value: @offer.try(:ends_at).try(:to_s) %>
  </div>

  <div class="field">
    <%= form.label :premium %>
    <%= form.check_box :premium, id: :offer_premium %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
